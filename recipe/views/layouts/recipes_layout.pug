extends default_layout

block append content
    table
        tr
            th Name
            th Image
            th Description
            th Date

        - for (let i=0; i<items.length; i++)
            tr
                td #{items[i].name}
                td
                    img(src=items[i].path_img, alt="image not found")
                td #{items[i].description}
                td #{items[i].date}
                td
                    a(href='/recipe?id='.concat(items[i].recipe_id)): button(type="button") Go To