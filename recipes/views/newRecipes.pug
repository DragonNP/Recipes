extends layouts/default_layout
block content
    - let items = recipes || ''

    table
        caption
            h1 #{title}
        tr
            th Image
            th Name
            th Description
            th Ingredients
        tr
            - for (let i = 0; i < items.length; i++)
                td #{items[i].path_img}
                td #{items[i].name}
                td #{items[i].description}
                td #{items[i].ingredients}
                td
                    a(href='/recipe?id='.concat(items[i]._id)): button(type="button") Go To

