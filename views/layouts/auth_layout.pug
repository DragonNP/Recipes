doctype html
html
    head
        meta(charset='utf-8')
        title #{title}

        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(content='This is site for you recipes' name='description')
        meta(content='DragonNP' name='author')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        //- App favicon
        link(rel='shortcut icon' href='assets/images/favicon.ico')

        //- Plugins css
        block plugins-css

        //- App css
        link(href='assets/css/bootstrap.min.css' rel='stylesheet' type='text/css')
        link(href='assets/css/icons.min.css' rel='stylesheet' type='text/css')
        link(href='assets/css/app.min.css' rel='stylesheet' type='text/css')

    body
        div(class='account-pages mt-5 mb-5')
            .container
                div(class='row justify-content-center')
                    div(class='col-md-8 col-lg-6 col-xl-5')
                        .card
                            div(class='card-body p-4')
                                div(class='text-center w-75 m-auto')
                                    block upper-block
                                block form
                            //- end card-body
                        //- end card

                        div(class='row mt-3')
                            div(class='col-12 text-center')
                                block lower-block
        //- end page

        footer(class="footer footer-alt")
            span 2019 - 2020 &copy; Recipes by&nbsp;
                a(href="#") DragonNP

        //- Vendor js || mobile menu
        script(src='assets/js/vendor.min.js')

        //- Form Validation js (Parsleyjs)
        script(src='assets/libs/parsleyjs/parsley.min.js')

        //- App js
        script(src="assets/js/app.min.js")

        script.
            $(document).ready(function () {
                $(".parsley-form").parsley()
            });