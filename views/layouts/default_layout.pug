doctype html
html
    head
        meta(charset='utf-8')
        title #{title}

        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(content='This is site for you recipes' name='description')
        meta(content='DragonNP' name='author')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')

        //- App favicon
        link(rel='shortcut icon' href='assets/images/favicon.ico')
        
        //- App css
        link(href='assets/css/bootstrap.min.css' rel='stylesheet' type='text/css')
        link(href='assets/css/icons.min.css' rel='stylesheet' type='text/css')
        link(href='assets/css/app.min.css' rel='stylesheet' type='text/css')

    body(class="center-menu")

        //- Navigation Bar
        header(id='topnav')

            //- Topbar Start
            div(class='navbar-custom')
                div(class='container-fluid')
                    ul(class='list-unstyled topnav-menu float-right mb-0')
    
                        //- Mobile Menu
                        li(class='dropdown notification-list')
                            //- Mobile menu toggle
                            a(class='navbar-toggle nav-link')
                                div(class='lines')
                                    span
                                    span
                                    span
                            //- End mobile menu toggle
                        //- End Mobile Menu
                            
                        //- Search 
                        li(class='d-none d-sm-block')
                            form(class='app-search')
                                div(class='app-search-box')
                                    div(class='input-group')
                                        input(type='text' class='form-control' placeholder='Search...')
                                        div(class='input-group-append')
                                            button(class='btn' type='submit')
                                                i(class='fe-search')
                        //-End Search
                                                
                        //- Language
                        li(class='dropdown d-none d-lg-block')
                            a(class='nav-link dropdown-toggle mr-0 waves-effect waves-light' data-toggle='dropdown' href='#' role='button' aria-haspopup='false' aria-expanded='false')
                                img(src='assets/images/flags/'.concat(currentLang.domain + '.jpg') class='mr-1' height='12')
                                span(class='align-middle') #{currentLang.name}
                                    i(class='mdi mdi-chevron-down')
                
                            div(class='dropdown-menu dropdown-menu-right')
                                - for(let key in langs)
                                    if key === currentLang.domain
                                        - continue
                                    //- item
                                    a(href='/setLanguage?lang='.concat(key) class='dropdown-item notify-item')
                                        img(src='assets/images/flags/'.concat(key + '.jpg') class='mr-1' height='12')
                                        span(class='align-middle') #{langs[key]}
                        //- End Language

                        //- Notification
                        li(class='dropdown notification-list')
                            a(class='nav-link dropdown-toggle  waves-effect waves-light' data-toggle='dropdown' href='#' role='button' aria-haspopup='false' aria-expanded='false')
                                i(class='fe-bell noti-icon')
                                //- span class='badge badge-danger rounded-circle noti-icon-badge'4/span

                            div(class='dropdown-menu dropdown-menu-right dropdown-lg')

                                //- item
                                div(class='dropdown-item noti-title')
                                    h5(class='m-0')
                                        span(class='float-right')
                                            a(href='#' class='text-dark')
                                                small #{clearAll}
                                        p #{notification}

                                div(class='slimscroll noti-scroll')
                                    span(class='text-center')
                                        p(class='notify-details') #{noNotifications}

                                //-
                                    a(href='#' class='dropdown-item notify-item active')
                                        div(class='notify-icon bg-soft-primary text-primary')
                                            i(class='mdi mdi-comment-account-outline')
                                        p(class='notify-details') Notification 1
                                            small(class='text-muted') Text Muted
    
                                    a(href='#' class='dropdown-item notify-item')
                                        div(class='notify-icon')
                                            img(src='assetsmages/users/avatar-2.jpg' class='img-fluid rounded-circle' alt='')
                                        p(class='notify-details') Notification 2
                                            small(class='text-muted') Text Muted
    
                                    a(href='#' class='dropdown-item notify-item')
                                        div(class='notify-icon')
                                            img(src='assetsmages/users/avatar-3.jpg' class='img-fluid rounded-circle' alt='')
                                        p(class='notify-details') Notification 3
                                            small(class='text-muted') Text Muted
    
                                    a(href='#' class='dropdown-item notify-item')
                                        div(class='notify-icon bg-secondary')
                                            i(class='mdi mdi-heart')
                                        p(class='notify-details') Notification 4
                                            small( class='text-muted') Text Muted


                                
                                //- All
                                //- a(href='#' class='dropdown-item text-center text-primary notify-item notify-all')
                                    View all

                        
                        //- End Notification
                        
                        //- Profile
                        if isProfile
                            li(class='dropdown notification-list')
                                a(class='nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light' data-toggle='dropdown' href='#' role='button' aria-haspopup='false' aria-expanded='false')
                                    span(class='pro-user-name ml-1')
                                        span #{username}
                                        i(class='mdi mdi-chevron-down')

                                div(class='dropdown-menu dropdown-menu-right profile-dropdown ')

                                    //- item
                                    div(class='dropdown-header noti-title')
                                        h6(class='text-overflow m-0') #{welcome}!

                                    //- item
                                    a(href='/myProfile' class='dropdown-item notify-item')
                                        i(class='remixicon-account-circle-line')
                                        span #{myProfile}

                                    //- item
                                    a(href='#' class='dropdown-item notify-item')
                                        i(class='ti-pencil')
                                        span #{edit}

                                    //- item
                                    a(href='#' class='dropdown-item notify-item')
                                        i(class='remixicon-settings-3-line')
                                        span #{settings}

                                    div(class='dropdown-divider')

                                    //- item
                                    a(href='/logout' class='dropdown-item notify-item')
                                        i(class='remixicon-logout-box-line')
                                        span #{logout}
                        //- End Profile

                    //- LOGO
                    div(class='logo-box')
                        a(href='#' class='logo text-center')
                            span(class='logo-lg')
                                img(src='assets/images/logo-light.png' alt='' height='20')

                            span(class='logo-sm')
                                img(src='assets/images/logo-sm.png' alt='' height='24')
                    //- End LOGO

                        div(class='clearfix')
            //- end Topbar

            //- navbar-custom Start
            div(class='topbar-menu')
                div(class='container-fluid')
                    div(id='navigation')
                        //- Navigation Menu
                        ul(class='navigation-menu')

                            li(class='has-submenu')
                                a(href='/newRecipes')
                                    i(class='ti-receipt')
                                    span #{newRecipes}

                            li(class='has-submenu')
                                a(href='/myRecipes')
                                    i(class='ti-receipt')
                                    span #{myRecipes}

                            li(class='has-submenu')
                                a(href='/favorites')
                                    i(class='ti-star')
                                    span #{favorites}

                            li(class='has-submenu')
                                a(href='/addRecipe')
                                    i(class='ti-pencil')
                                    span #{addRecipe}
                        //- End navigation menu
                        div(class='clearfix')

                    //- end #navigation
                //- end container
            //- end navbar-custom
        //- End Navigation Bar

        //- ==============================================================
        //- Start Page Content here
        //- ==============================================================

        div(class="wrapper")
            div(class="container-fluid")

                //- start page title
                div(class="row")
                    div(class="col-5")
                        div(class="page-title-box")
                            h4(class="page-title") #{title}
                //- end page title

                //- start content
                block content
                //- end content

        //- ==============================================================
        //- End Page content
        //- ==============================================================

        //- Footer Start 
        footer(class="footer")
            div(class="container-fluid")
                div(class="row")
                    div(class="col-md-6")
                        span 2019 - 2019 &copy; Recipes by <a href="#">DragonNP</a>
        //- end Footer 
        
        //- Right bar overlay
        div(class="rightbar-overlay")
        
        //- Vendor js 
        script(src="assets/js/vendor.min.js")
        
        script(src="assets/libs/jquery-knob/jquery.knob.min.js")
        script(src="assets/libs/peity/jquery.peity.min.js")
        
        //- init js 
        script(src="assets/js/pages/dashboard-1.init.js")
        
        //- App js 
        script(src="assets/js/app.min.js")