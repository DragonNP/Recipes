extends ../layouts/default_layout

block content
    - let items = recipe || ''
    h1 #{title}
    table
        tr
            th #{image}
            th #{name}
            th #{description}
            th #{ingredients}
            th #{instruction}
            th #{dateAdded}
            th #{author}
        tr
            td #{items.path_img}
            td #{items.name}
            td #{items.description}
            td #{items.ingredients}
            td #{items.instruction}
            td #{items.date}
            td #{authorName}