extends ../layouts/default_layout

block content
    - let items = recipe || ''
    h1 #{title}
    table
        tr
            th #{dateAdded}
            th #{author}
        tr
            td #{items.date}
            td #{authorName}
            
block content
    div(class='row')
        div(class='col-lg-6')
            div(class='card')
                img(class='card-img-top img-fluid' src=recipe.img_path)

                div(class='card-body')
                    h5(class='card-title') #{recipe.name}
                    p(class='card-text') #{recipe.description}

                ul(class='list-group list-group-flush')
                    li(class='list-group-item')
                        span Ingredients: #{recipe.ingredients}
                    li(class='list-group-item')
                        span #{instruction}: #{recipe.instruction}
                    li(class='list-group-item')
                        span #{author}: #{authorName}
                    li(class='list-group-item')
                        span #{dateAdded}: #{recipe.date}

                div(class='card-body')
                    a(href='/editRecipe?id='.concat(recipe._id) class='float-right btn btn-success waves-effect waves-light')
                        span(class="mdi mdi-pencil")

    //- Vendor js
    script(src="assets/js/vendor.min.js")

    script(src="assets/libs/jquery-knob/jquery.knob.min.js")
    script(src="assets/libs/peity/jquery.peity.min.js")

    //- App js
    script(src="assets/js/app.min.js")